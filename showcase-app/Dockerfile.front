# Stage 1: Build
FROM node:22-alpine AS builder

ARG VITE_API_URL=http://localhost:8080
ARG VITE_APP_ENV=production
ARG VITE_APP_MODE=full
ARG VITE_DEFAULT_EMAIL=admin@pbx.local
ARG VITE_DEFAULT_PASSWORD=Agent666
ARG VITE_APP_NAME="PBX by Agent"

WORKDIR /app

# Enable Corepack for Yarn 4
RUN corepack enable

# Copy all frontend source files
COPY src/front/ .

# Install dependencies (must run after full copy so Yarn PnP resolves correctly)
RUN yarn install --immutable

# Set environment variables for build
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_APP_ENV=${VITE_APP_ENV}
ENV VITE_APP_MODE=${VITE_APP_MODE}
ENV VITE_DEFAULT_EMAIL=${VITE_DEFAULT_EMAIL}
ENV VITE_DEFAULT_PASSWORD=${VITE_DEFAULT_PASSWORD}
ENV VITE_APP_NAME=${VITE_APP_NAME}

# Build the application
RUN yarn build

# Stage 2: Production with nginx
FROM nginx:alpine

# Copy custom nginx configuration
COPY showcase-app/nginx-front.conf /etc/nginx/conf.d/default.conf

# Copy built files from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
